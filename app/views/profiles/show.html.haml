- if @profile.user == current_user
  = link_to "View Counts", current_user_profile_views_path

.row
  / .col-md-1
  .col-md-4
    .photo-sizing-profile
      = image_tag(@profile.user.image.url, class: "userpic")
  .col-md-7
    .row
      .col-md-10
        %h3.remove-top-margin
          = @profile.user.full_name
      .col-md-1
        - if can? :update, @profile
          = button_to("Edit Profile", edit_current_user_profile_path, :class => "btn btn-default", :method => :get)
        - elsif can? :create, Message
          = button_to("Message me", new_user_message_path(@user), :class => "btn btn-default", :method => :get)
        - if current_user != @profile.user && current_user.saved_profiles.where(profile_id: @profile.id).length == 0
          = button_to("Save this profile", user_saved_profiles_path(@user), :class => "btn btn-default", :method => :post)
    .row
      %b Location:
      = @profile.city
    .row.top-buffer
      %b Age:
      = @profile.age
    .row.top-buffer.bio-text
      %b Bio:
      = @profile.bio
.row.top-buffer
  / .col-md-1
  .col-md-12
    .row
      .col-md-4
        %b Gender:
        = @profile.gender
      .col-md-7.right-profile-box
        %b Current job:
        = @profile.current_occupation
    .row.top-buffer
      .col-md-4
        %b Interested in:
        = @profile.interested_in_gender
        aged 
        = @profile.interested_in_age_start
        to 
        = @profile.interested_in_age_end
      .col-md-7.right-profile-box
        %b Machine languages:
        = @profile.programming_languages
    .row.top-buffer
      .col-md-4
        %b Relationship status:
        = @profile.relationship_status
      .col-md-7.right-profile-box
        %b Human languages:
        = @profile.native_human_language
        (native)
        = @profile.other_human_languages
    .row.top-buffer
      .col-md-4
        %b Number of children: 
        = @profile.children
      .col-md-7.right-profile-box
        %b Interests:
        = @profile.interests
